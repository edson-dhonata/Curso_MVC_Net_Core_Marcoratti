@model Lanche

<div class="col-md-4 col-lg-4">
    <p><img src="@Model.LancheImagemURL" class="img-fluid" /></p>
    @*Parâmetro 'c' no ToString para formatar como moeda em real.*@
    <h3>@Model.LanchePreco.ToString("c")</h3>
    <h4>@Model.LancheNome</h4>
    <p>@Model.LancheDescricaoCurta...</p>
</div>